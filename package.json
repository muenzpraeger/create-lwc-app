{
    "author": "RenÃ© Winkelmeyer @muenzpraeger",
    "homepage": "https://github.com/muenzpraeger/create-lwc-app",
    "name": "root",
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.3.0",
        "@typescript-eslint/parser": "^2.3.0",
        "eslint": "^6.4.0",
        "husky": "^3.0.5",
        "lerna": "^3.13.4",
        "lint-staged": "^9.3.0",
        "prettier": "^1.17.0",
        "ts-node": "^8",
        "typescript": "^3.6"
    },
    "scripts": {
        "build": "lerna run build",
        "lint": "eslint ./packages/**/src/**/*.ts",
        "prettier": "prettier --write '**/*.{html,css,js,json,md,ts,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{html,css,js,json,md,ts,yaml,yml}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{html,js,json,ts,yaml,yml,md}": [
            "prettier --write"
        ],
        "**/packages/**/*.ts": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    }
}
